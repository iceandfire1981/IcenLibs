<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BleInformationActivity">
    <RelativeLayout
        android:id="@+id/b_i_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright">
        <TextView
            android:id="@+id/b_i_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/ble_common_no_connect_device"
            android:textSize="20dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/b_i_title_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/ble_common_no_info"
            android:textSize="20dp"
            android:gravity="center"/>

    </RelativeLayout>
    <ListView
        android:id="@+id/b_i_services_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>